<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/vk"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/vk_text_logo"
        android:padding="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing up and use VK"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vk"

        />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:textSize="20dp"
        android:maxLines="1"
        android:paddingVertical="15dp"/>

    <EditText
        android:id="@+id/edSurName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:layout_marginTop="10dp"
        android:hint="Surame"
        android:textSize="20dp"
        android:maxLines="1"
        android:paddingVertical="15dp"/>

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edSurName"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textSize="20dp"
        android:maxLines="1"
        android:paddingVertical="15dp"/>

    <EditText
        android:id="@+id/edLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edEmail"
        android:layout_marginTop="10dp"
        android:hint="Login"
        android:textSize="20dp"
        android:maxLines="1"
        android:paddingVertical="15dp"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edLogin"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textSize="20dp"
        android:maxLines="1"
        android:paddingVertical="15dp"
        android:inputType="textPassword"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/edPassword"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пожалуйста заполните все поля"
        android:textColor="#D50000"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Вы успешно зарегистрированы!"
        android:textColor="#00C853"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        android:backgroundTint="#0077FF"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:paddingVertical="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>